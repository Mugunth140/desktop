{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MotorMods",
  "version": "1.0.0",
  "identifier": "com.motormods.billing",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MotorMods - Billing System",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Auto parts billing and inventory management",
    "longDescription": "MotorMods is an offline-first billing and stock management system designed for small auto parts stores. Features include POS billing, inventory management, invoicing, and local backups."
  }
}
